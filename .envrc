# Unset environment variables that cause unnecessary rebuilds
# SOURCE_DATE_EPOCH conflicts with some build scripts
unset SOURCE_DATE_EPOCH

# Compiler variables that invalidate cargo fingerprints
# unset CC
unset CXX
unset AR
unset RANLIB

# Nix-related variables that can cause build script instability
unset NIX_CC
unset NIX_BINTOOLS
unset NIX_BUILD_CORES
unset NIX_CFLAGS_COMPILE
unset NIX_LDFLAGS  
unset NIX_ENFORCE_NO_NATIVE
unset NIX_HARDENING_ENABLE
unset NIX_STORE
unset NIX_BINTOOLS_WRAPPER_TARGET_HOST_x86_64_unknown_linux_gnu
unset NIX_CC_WRAPPER_TARGET_HOST_x86_64_unknown_linux_gnu

# Use nix if you have a shell.nix or default.nix (optional)
# use nix
